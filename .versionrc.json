{
  "types": [
    { "type": "feat", "section": "Features" },
    { "type": "fix", "section": "Bug Fixes" },
    { "type": "chore", "hidden": true },
    { "type": "docs", "section": "Documentation" },
    { "type": "style", "hidden": true },
    { "type": "refactor", "section": "Code Refactoring" },
    { "type": "perf", "section": "Performance Improvements" },
    { "type": "test", "hidden": true }
  ],
  "commitUrlFormat": "https://github.com/[username]/timeismoney/commit/{{hash}}",
  "compareUrlFormat": "https://github.com/[username]/timeismoney/compare/{{previousTag}}...{{currentTag}}",
  "scripts": {
    "postbump": "STANDARD_VERSION_HOOK=postbump node scripts/version-sync.js"
  }
}
